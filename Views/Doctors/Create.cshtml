                    <option>IT</option>
                    <option>HR</option>
                    <option>Finance</option>
                    <option>Clinical</option>
                    <option>Admin</option>
                </select>
                <span asp-validation-for="DoctorDepartmetment" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" name="files" id="upLoadBox" class="form-control" />
            </div>
            <div class="form-group">
