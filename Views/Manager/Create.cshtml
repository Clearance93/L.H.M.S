        <div class="collapse" id="dashboard-collapse">
          <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
            <li><a asp-controller="UserRole" asp-action="Index" class="link-dark rounded">Employees</a></li>
            <li><a asp-controller="Patient" asp-action="Index" class="link-dark rounded">Patients</a></li>
