@page
@using ClinicalApp.Models
@using ClinicalApp.Utility
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.Title" class="form-control" aria-required="true" class="form-select">
                    <option disabled>Select your title</option>
                    <option>Mr</option>
                    <option>Mrs</option>
                    <option>Miss</option>
                    <option>Doc</option>
                    <option>Prof</option>
                </select>
                <label asp-for="Input.Title"></label>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <select asp-for="Input.Position" asp-items="Html.GetEnumSelectList<Position>()" class="form-control" aria-required="true"></select>
                <label asp-for="Input.Position"></label>
                <span asp-validation-for="Input.Position" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <select asp-for="Input.Department" class="form-control" asp-items="Html.GetEnumSelectList<Department>()"  aria-required="true"></select>
                <label asp-for="Input.Department"></label>
                <span asp-validation-for="Input.Department" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <select asp-for="Input.ContractType" asp-items="Html.GetEnumSelectList<ContractType>()" class="form-control"aria-required="true"></select>
                <label asp-for="Input.ContractType"></label>
                <span asp-validation-for="Input.ContractType" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.DateStarted" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.DateStarted"></label>
                <span asp-validation-for="Input.DateStarted" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.StreetName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.StreetName"></label>
                <span asp-validation-for="Input.StreetName" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.Surbub" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Surbub"></label>
                <span asp-validation-for="Input.Surbub" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.City_Town" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.City_Town"></label>
                <span asp-validation-for="Input.City_Town" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.Country" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.ZipCode" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.ZipCode"></label>
                <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-floating radio">
                <input type="radio" name="rdUserRole" value="@Workers.AdminRole" />@Workers.AdminRole
                <input type="radio" name="rdUserRole" value="@Workers.DoctorRole" />@Workers.DoctorRole
                <input type="radio" name="rdUserRole" value="@Workers.FinanceRole" />@Workers.FinanceRole
                <input type="radio" name="rdUserRole" value="@Workers.HRRole" />@Workers.HRRole
                <input type="radio" name="rdUserRole" value="@Workers.ITRole" />@Workers.ITRole
                <input type="radio" name="rdUserRole" value="@Workers.ManagerRole" />@Workers.ManagerRole
                <input type="radio" name="rdUserRole" value="@Workers.NurseRole" /> @Workers.NurseRole
                <input type="radio" name="rdUserRole" value="@Workers.ParamedicRole" /> @Workers.ParamedicRole
                <input type="radio" name="rdUserRole" value="@Workers.PorterRole" /> @Workers.PorterRole
            </div>
            <div class="form-floating">
                <input asp-for="Input.Image" type="file" name="files" id="uploadFile" aria-required="true" />
                <span asp-validation-for="Input.Image" class="text-danger form-control"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
