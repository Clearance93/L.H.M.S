            </div>
            <div class="form-group">
                <label asp-for="DoctorAddress" class="control-label"></label>
                <textarea asp-for="DoctorAddress" class="form-control"></textarea>
                <span asp-validation-for="DoctorAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorPhoneNumber" class="control-label"></label>
                <input asp-for="DoctorPhoneNumber" class="form-control" />
                <span asp-validation-for="DoctorPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorDepartmetment" class="control-label"></label>
                <select asp-for="DoctorDepartmetment" class="form-control form-select">
