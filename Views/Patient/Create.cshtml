@section Scripts{
    <script>
        function showhideInput(){
                if(document.getElementById('foreign').checked == "Yes"){
                     document.getElementById('foreignInfo').style.display = 'none';
                }
                else{
                    document.getElementById('foreignInfo').style.display = 'block';
                }

        }        
    </script>
    <script>
        
                function patientDischarge(){
                    if(document.getElementById('discharge').checked == "Yes"){
                        document.getElementById('discharging').style.display = "none";
                    }
                    else{
                        document.getElementById('discharging').style.display = "block";
                    }
                }
    </script>
}